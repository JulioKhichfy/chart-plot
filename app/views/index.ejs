<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		<title>Plot - Chart</title>
		<link rel="stylesheet" href="css/bootstrap.min.css">
		<link rel="stylesheet" href="css/jquery.numberedtextarea.css">
		<style>
			textarea {background:#000000; color:#ffffff; width: 100%;}
		</style>
	</head>
 	<body>
	 	<div class="container">
			<div class="row">
				<div class="col-12">	
					<nav class="navbar navbar-light" style="background-color: gray;">
			  			<label><%= name_autor %>'s Challenge</label>
					</nav>
				</div>
			</div>
			<form action="/" method="post" enctype="application/json">
				<div class="row">
		    		<div class="col-12">
		    			<div class="numberedtextarea-wrapper">
		    				<textarea id="txtArea" name="eventsJson" cols="110" rows="15"><% for(var i=0; i < valuesToTextArea.length; i++){%><%=valuesToTextArea[i]%><%}%></textarea>
		    				<input type="hidden" name="countLines" id="countLines"></input>
		    			</div>
			    	</div>
		    	</div>
		    	<div class="col-2">
		    		<button type="submit" class="btn btn-default">Gerar Gr√°fico</button>
		    	</div>
	    	</form>
	    	<%if(eventsJson != '') {%>
	    		<canvas id="myChart" width="800px" height="500px"></canvas>
	    	<%}%>
	    	<% if(validacao){ %>
			<ul>
				<% for(var i = 0; i < validacao.length; i++){ %>
					<li>
						<%= validacao[i].msg %>
					</li>
				<% } %>
			</ul>
			<% } %>
	    </div>
	<script src="js/jquery-3.3.1.min.js"></script>
	<script src="js/bootstrap.min.js" ></script>
	<script src="js/jquery.numberedtextarea.js"></script>
	<script type="text/javascript">
		$('textarea').numberedtextarea();

	</script>
	<%if(eventsJson != '') {%>
		<script src="js/chart.js"></script>
		<script src="js/graph.js"></script>
	<%}%>
	</body>
</html>