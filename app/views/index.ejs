<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Plot - Chart</title>

		<!-- bootstrap -->
		<link rel="stylesheet" href="css/bootstrap.min.css">
		
		<!-- text area and line input -->
		<link rel="stylesheet" href="css/jquery.numberedtextarea.css">

		<style>
			textarea {background:#000000; color:#ffffff; width: 100%;}
		</style>
	</head>
 
	<body>
	 	<div class="container">
			<div class="row">
				<div class="col-12">	
					<nav class="navbar navbar-light" style="background-color: gray;">
			  			<label><%= name_autor %>'s Challenge</label>
					</nav>
				</div>
			</div>
			<form action="/" method="post" enctype="application/json">
				<div class="row">
		    		<div class="col-12">
		    			<div class="numberedtextarea-wrapper">
		    				<textarea id="txtArea" name="eventsJson" cols="110" rows="15" ></textarea>
		    				<input type="hidden" name="countLines" id="countLines"></input>
		    			</div>
			    	</div>
		    	</div>
		    	<div class="col-2">
		    		<button type="submit" class="btn btn-default">Gerar Gr√°fico</button>
		    	</div>
	    	</form>
	    	<div>
	    		<%= eventsJson %>
	    	</div>
	    	<div>
	    		<%if(eventsJson != '') {%>
				<canvas id="myChart" width="800px" height="500px"></canvas> 			
				<%}%>
			</div>
	    </div>
	<!-- JQuery -->
	<script src="js/jquery-3.3.1.min.js"></script>
	<!--crossorigin="anonymous"-->
	<script src="js/bootstrap.min.js" ></script>
	<script src="js/jquery.numberedtextarea.js"></script>

	<script type="text/javascript">
		$('textarea').numberedtextarea();
	</script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
	<script src="js/graph.js"></script>
	
	
	</body>
</html>